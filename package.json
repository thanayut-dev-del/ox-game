    "format:web": "npx prettier --write \"web/**/*.{ts,tsx,js,jsx,json,css,html,md}\"",
    "format:server": "npx prettier --write \"server/**/*.{ts,tsx,js,jsx,json,css,html,md,sql}\"",
    "format:check": "npx prettier --check \"web/**/*.{ts,tsx,js,jsx,json,css,html,md}\" \"server/**/*.{ts,tsx,js,jsx,json,css,html,md,sql}\""
  }
}
